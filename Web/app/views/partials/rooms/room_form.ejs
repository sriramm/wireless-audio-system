<div id="room-form" class="hidden">
    <h4>Create room</h4>
    <form>
        <div class="form-group row">
            <label for="inputName" class="col-sm-3 col-form-label">Room name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputName" placeholder="Name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Room password (optional)</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-7">
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="button" class="cancel pull-right btn btn-danger">Cancel</button>
            </div>
        </div>
    </form>
</div>
